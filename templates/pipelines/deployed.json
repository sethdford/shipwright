{
  "name": "deployed",
  "description": "Full autonomous pipeline with deploy, validate, and monitor â€” generated by shipwright init --deploy",
  "defaults": {
    "test_cmd": "",
    "model": "opus",
    "agents": 1
  },
  "intelligence": {
    "adversarial_enabled": true,
    "architecture_enabled": true,
    "simulation_enabled": true
  },
  "stages": [
    { "id": "intake", "enabled": true, "gate": "auto", "config": {} },
    {
      "id": "plan",
      "enabled": true,
      "gate": "auto",
      "config": { "model": "opus" }
    },
    {
      "id": "design",
      "enabled": true,
      "gate": "auto",
      "config": { "model": "opus" }
    },
    {
      "id": "build",
      "enabled": true,
      "gate": "auto",
      "config": { "max_iterations": 20, "audit": true, "quality_gates": true }
    },
    {
      "id": "test",
      "enabled": true,
      "gate": "auto",
      "config": { "coverage_min": 80 }
    },
    { "id": "review", "enabled": true, "gate": "auto", "config": {} },
    {
      "id": "compound_quality",
      "enabled": true,
      "gate": "auto",
      "config": {
        "adversarial": true,
        "negative": true,
        "e2e": true,
        "dod_audit": true,
        "max_cycles": 3,
        "audit_intensity": "auto",
        "compound_quality_blocking": true
      }
    },
    {
      "id": "pr",
      "enabled": true,
      "gate": "auto",
      "config": { "wait_ci": false }
    },
    {
      "id": "merge",
      "enabled": true,
      "gate": "auto",
      "config": {
        "merge_method": "squash",
        "wait_ci_timeout_s": 600,
        "auto_delete_branch": true
      }
    },
    {
      "id": "deploy",
      "enabled": true,
      "gate": "approve",
      "config": {
        "staging_cmd": "__STAGING_CMD__",
        "production_cmd": "__PRODUCTION_CMD__",
        "rollback_cmd": "__ROLLBACK_CMD__",
        "deploy_strategy": "direct",
        "canary_cmd": "__CANARY_CMD__",
        "promote_cmd": "__PROMOTE_CMD__",
        "switch_cmd": "__SWITCH_CMD__",
        "health_url": "__HEALTH_URL__",
        "pre_deploy_ci_status": true,
        "pre_deploy_min_coverage": 80
      }
    },
    {
      "id": "validate",
      "enabled": true,
      "gate": "auto",
      "config": {
        "smoke_cmd": "__SMOKE_CMD__",
        "health_url": "__HEALTH_URL__",
        "close_issue": true
      }
    },
    {
      "id": "monitor",
      "enabled": true,
      "gate": "auto",
      "config": {
        "duration_minutes": 5,
        "health_url": "__HEALTH_URL__",
        "error_threshold": 5,
        "log_pattern": "ERROR|FATAL|PANIC",
        "log_cmd": "",
        "rollback_cmd": "__ROLLBACK_CMD__",
        "auto_rollback": true
      }
    }
  ]
}
