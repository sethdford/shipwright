{
  "watch_label": "shipwright",
  "poll_interval": 30,
  "max_parallel": 4,
  "pipeline_template": "autonomous",
  "skip_gates": true,
  "model": "opus",
  "base_branch": "main",
  "on_success": {
    "remove_label": "shipwright",
    "add_label": "pipeline/complete",
    "close_issue": true
  },
  "on_failure": {
    "add_label": "pipeline/failed",
    "comment_log_lines": 50
  },
  "notifications": {
    "slack_webhook": null
  },
  "health": {
    "stale_timeout_s": 5400,
    "progress_based": true,
    "stale_checks_before_warn": 3,
    "stale_checks_before_kill": 6,
    "hard_limit_s": 10800
  },
  "priority_labels": "urgent,p0,high,p1,normal,p2,low,p3",
  "alerts": {
    "degradation_window": 5,
    "cfr_threshold": 30,
    "success_threshold": 50
  },
  "patrol": {
    "enabled": true,
    "interval": 1800,
    "max_issues": 5,
    "label": "auto-patrol",
    "auto_watch": true,
    "checks": {
      "security": { "enabled": true },
      "stale_deps": { "enabled": true },
      "dead_code": { "enabled": true },
      "test_coverage": { "enabled": true },
      "doc_staleness": { "enabled": true },
      "performance": { "enabled": true },
      "recurring_failures": { "enabled": true, "threshold": 3 },
      "dora_degradation": { "enabled": true },
      "untested_scripts": { "enabled": true },
      "retry_exhaustion": { "enabled": true, "threshold": 2 }
    }
  },
  "auto_template": true,
  "template_map": {
    "hotfix|incident": "hotfix",
    "security": "enterprise"
  },
  "max_retries": 3,
  "retry_escalation": true,
  "self_optimize": true,
  "optimize_interval": 5,
  "priority_lane": true,
  "priority_lane_labels": "hotfix,incident,p0,urgent",
  "priority_lane_max": 1,
  "watch_mode": "repo",
  "org": null,
  "repo_filter": null,
  "auto_scale": true,
  "auto_scale_interval": 5,
  "max_workers": 6,
  "min_workers": 1,
  "worker_mem_gb": 4,
  "estimated_cost_per_job_usd": 8.0,
  "stale_reaper": true,
  "stale_reaper_interval": 10,
  "intelligence": {
    "enabled": true,
    "cache_ttl_seconds": 3600,
    "composer_enabled": true,
    "optimization_enabled": true,
    "prediction_enabled": true,
    "adversarial_enabled": true,
    "simulation_enabled": true,
    "architecture_enabled": true,
    "ab_test_ratio": 0.1,
    "anomaly_threshold": 3.0
  }
}
